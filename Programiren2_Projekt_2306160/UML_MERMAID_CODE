classDiagram
    class Filme {
        - titel : String
        - beschreibung : String
        - erscheinungsDat : String
        - id : int
        - schauspieler : ArrayList~Schauspieler~
        - regisur : Regisur
        - imdbBewertungen : IMDbBewertungen
        + Filme(titel : String, beschreibung : String, erscheinungsDat : String, id : int, imdbBewertungen : IMDbBewertungen)
        + Filme(titel : String, beschreibung : String, erscheinungsDat : String, id : int)
        + addBezihungSchauspieler(s1 : Schauspieler) : void
        + getterundsetter() : void
    }

    class IMDbBewertungen {
        - bewertung : double
        - anzahlBewertungen : int
        + IMDbBewertungen(bewertung : double, anzahlBewertungen : int)
        + getterundsetter() : void
    }

    class Regisur {
        + Regisur(name : String, id : int)
    }

    class Schauspieler {
        - filme : ArrayList~Filme~
        + Schauspieler(name : String, id : int)
        + getterundsetter() : void
    }

    class Reader {
        - groupnumber : int
        + read(filePath : String, filme : ArrayList~Filme~, regisure : ArrayList~Regisur~, schauspieler : ArrayList~Schauspieler~) : int
        - handleLine(line : String, schauspieler : ArrayList~Schauspieler~, filme : ArrayList~Filme~, regisur : ArrayList~Regisur~) : void
