    Filme       "1" --> "0,1" IMDbBewertungen
    Filme       "1" --> "1"   Regisur
    Filme       "n" --> "m"   Schauspieler
    Reader      "1" --> "n"   Filme
    Reader      "1" --> "n"   Regisur
    Reader      "1" --> "n"   Schauspieler
    Schauspieler <|-- Person
    Regisur     <|-- Person

    Main        "m" -->        Filme
    Main        "m" -->        Schauspieler
    Main        "m" -->        Regisur
    Main        "1" -->        Reader
