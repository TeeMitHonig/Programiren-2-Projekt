        - addFilmRegisurbezihung(line : String, filme : ArrayList~Filme~, regisur : ArrayList~Regisur~) : void
        - trimline(line : String) : String[]
    }

    class Datahelper {
        + static addIfNotDuplicate(list : ArrayList~T~, element : T, idExtractor : Function~T, ID~) : void
        + static findByID(list : ArrayList~T~, id : ID, idExtractor : Function~T, ID~) : T
